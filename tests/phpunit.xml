<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.5/phpunit.xsd"
    backupGlobals="true"
    backupStaticAttributes="false"
    bootstrap="../lib/DoozR/Bootstrap.php"
    cacheTokens="false"
    colors="true"
    stopOnError="true"
    stopOnFailure="true"
    verbose="false"
    testdox="true"
    timeoutForSmallTests="1"
    timeoutForMediumTests="10"
    timeoutForLargeTests="60"
    >
    <testsuites>
        <testsuite name="DoozR">
            <directory>.</directory>
        </testsuite>
        <testsuite name="DoozR_I18n_Service">
            <directory>../lib/Service/DoozR/I18n/tests/</directory>
        </testsuite>
        <testsuite name="DoozR_Http_Service">
            <directory>../lib/Service/DoozR/Http/tests/</directory>
        </testsuite>
        <!--testsuite name="DoozR_Form_Service">
            <directory>../lib/Service/DoozR/Form/tests/</directory>
        </testsuite-->
    </testsuites>

    <logging>
        <!--log
            type="coverage-html"
            target="../docs/coverage"
            charset="UTF-8"
            highlight="true"
            lowUpperBound="35"
            highLowerBound="70"
         /-->
        <log
            type="testdox"
        />
    </logging>

    <php>
        <const name="DOOZR_IS_UNIT_TEST" value="true" />
        <includePath>.</includePath>
        <includePath>../lib</includePath>
        <ini name="max_execution_time" value="600" />
    </php>
</phpunit>
