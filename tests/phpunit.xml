<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="../lib/DoozR/Bootstrap.php"
    backupStaticAttributes="false"

    cacheTokens="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    forceCoversAnnotation="false"
    mapTestClassNameToCoveredClassName="false"

    processIsolation="false"
    stopOnError="false"
    stopOnFailure="false"
    stopOnIncomplete="false"
    stopOnSkipped="false"

    verbose="false"
    testdox="true"
>
    <testsuites>
        <testsuite name="DoozR">
            <directory>.</directory>
        </testsuite>
        <testsuite name="DoozR_I18n_Service">
            <directory>../lib/Service/DoozR/I18n/tests/</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log
            type="coverage-html"
            target="../docs/coverage"
            charset="UTF-8"
            highlight="true"
            lowUpperBound="35"
            highLowerBound="70"
            />
    </logging>
</phpunit>
