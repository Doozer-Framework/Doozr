{
  "kernel": {
    "caching": {
      "enabled": true,
      "container": "filesystem",
      "memcache": {},
      "filesystem": {
        "directory": "{{DOOZR_DIRECTORY_TEMP}}"
      },
      "lifetime": 3600
    },
    "debugging": {
      "enabled": true
    },
    "localization": {
      "charset": "unicode",
      "encoding": "UTF-8",
      "language": "en",
      "country": "us",
      "locale": "en-us",
      "mimetype": "text/html",
      "timezone": "UTC"
    },
    "logging": {
      "enabled": true,
      "level": 0,
      "unclassified": true,
      "logger": {
        "system": {
          "name": "system",
          "level": 0
        },
        "debugbar": {
          "name": "debugbar",
          "level": 0
        }
      }
    },
    "model": {
      "enabled": true,
      "errormessage": "Error while accessing database.",
      "oxm": "Doctrine",
      "driver": "Driver.php",
      "entities": "{{DOOZR_APP_ROOT}}App/Model/Entity/",
      "connections": {
        "read": {
          "type": "sql",
          "driver": "pdo_mysql",
          "description": "A read connection to MySQL.",
          "user": "root",
          "password": "",
          "dbname": "mysql",
          "host": "localhost",
          "port": "3306"
        }
      }
    },
    "path": {
      "root": "{{DOOZR_DOCUMENT_ROOT}}",
      "app": "{{DOOZR_APP_ROOT}}",
      "upload": "{{DOOZR_APP_ROOT}}Data/Private/Upload/"
    },
    "security": {
      "cryptography": {
        "keys": {
          "private": "{{DOOZR_PRIVATE_KEY}}",
          "public": "{{DOOZR_PUBLIC_KEY}}"
        }
      }
    },
    "service": {
      "web": [
        "session"
      ],
      "cli": [
        "crypt",
        "filesystem"
      ],
      "httpd": [
        "filesystem"
      ]
    },
    "system": {
      "php": {
        "max_execution_time": 0,
        "memory_limit": 12582912
      }
    },
    "transmission": {
      "routing": {
        "routes": "{{include(.routes.json)}}"
      },
      "ssl": {
        "enabled": false,
        "force": false
      },
      "response": {
        "header": {},
        "gzip": {
          "enabled": true
        }
      },
      "request": {
        "redirect": {
          "exclude": "Doozr,abc,123",
          "defaults": [
            "Index",
            "Index"
          ],
          "pattern": {
            "pattern": "/[^\\/]{{EXCLUDE}}[a-zA-Z0-9_\\-]+/i",
            "translation": "presenter/action"
          }
        },
        "filter": [
          {
            "search": "/(\\/app_dev.php)/u",
            "replace": ""
          },
          {
            "search": "/(\\/$)/u",
            "replace": ""
          },
          {
            "search": "/^$/u",
            "replace": "/"
          }
        ]
      }
    },
    "view": {
      "settings": {
        "outputmode": 55
      },
      "directories": {
        "templates": "{{DOOZR_APP_ROOT}}Data/Private/Template/",
        "compiled": "{{DOOZR_DIRECTORY_TEMP}}",
        "config": "{{DOOZR_APP_ROOT}}Data/Private/Config/",
        "cache": "{{DOOZR_DIRECTORY_TEMP}}",
        "plugins": "{{DOOZR_APP_ROOT}}Data/Private/Plugin/Phptal/"
      },
      "template": {
        "path": "{{DOOZR_APP_ROOT}}Data/Private/Template/",
        "engine": {
          "name": "PHPTAL",
          "library": "phptal"
        }
      }
    }
  }
}
