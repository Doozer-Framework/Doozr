        "port": "5984",
        "database": "DoozR",
        "user": "",
        "password": ""
    },
    "debug": {
        "enabled": true
    },
    "logging": {
        "enabled": true,
        "level": 0,
        "unclassified": true,
        "logger": {
            "client": {
                "name": "client",
                "level": 6
            },
            "file": {
