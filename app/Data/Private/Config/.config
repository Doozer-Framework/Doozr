{
    "app": {
        "name": "DoozR",
        "namespace": "DoozR",
        "path": "{{DOOZR_APP_ROOT}}Class/"
    },
    "route": {
        "routes": {
            "Foo": {
                "Bar2": ["Demo", "Screen"]
            },
            "api": ["Api", "Main"]
        }
