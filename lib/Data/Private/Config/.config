{
    "base": {
        "pattern": {
            "type": "MVP",
            "enabled": true,
            "autorun": true
        },
        "services": {
            "web": [],
            "cli": [
                "crypt",
                "filesystem"
            ],
            "httpd": [
                "filesystem"
            ]
        },
        "template": {
            "enabled": true,
            "path": "{{DOOZR_APP_ROOT}}Data/Private/Template/",
            "engine": {
                "name": "PHPTAL",
                "library": "phptal"
            }
        }
    },
    "routes": "{{include(.routes)}}",
    "request": {
        "filter": [{
            "search": "/(\\/$)/u",
            "replace": ""
        },{
            "search": "/(index)/u",
            "replace": "index"
        },{
            "search": "/^$/u",
            "replace": "/"
        }]
    },
    "redirect": {
        "exclude": "DoozR,abc,123",
        "defaults": [
            "Index",
            "Index"
        ],
        "pattern": {
            "pattern": "/[^\\/]{{EXCLUDE}}[a-zA-Z0-9_\\-]+/i",
            "translation": "presenter/action"
        }
    },
    "debug": {
        "enabled": true,
        "smtp": true
    },
    "logging": {
        "enabled": true,
        "level": 0,
        "unclassified": true,
        "logger": {
            "system": {
                "name": "system",
                "level": 0
            },
            "debugbar": {
                "name": "debugbar",
                "level": 0
            }
        }
    },
    "phptal": {
        "settings": {
            "outputmode": 55
        },
        "directories": {
            "templates": "{{DOOZR_APP_ROOT}}Data/Private/Template/",
            "compiled": "{{DOOZR_SYSTEM_TEMP}}",
            "config": "{{DOOZR_APP_ROOT}}Data/Private/Config/Phptal/",
            "cache": "{{DOOZR_SYSTEM_TEMP}}",
            "plugins": "{{DOOZR_APP_ROOT}}Data/Private/Plugin/Phptal/"
        }
    },
    "transmission": {
        "gzip": {
            "enabled": true
        },
        "ssl": {
            "enabled": false,
            "force": false
        },
        "header": {}
    },
    "crypt": {
        "key": "abcdefghijuklmno0123456789012345"
    },
    "session": {
        "autoinit": true,
        "identifier": "DoozR",
        "lifetime": 86400,
        "gcTime": 86400,
        "security": {
            "enabled": true,
            "regenerate": 5,
            "obfuscate": true,
            "httponly": false,
            "ssl": true,
            "encryption": {
                "enabled": false,
                "cipher": "Aes",
                "encoding": "base64"
            },
            "bind": {
                "ip": {
                    "enabled": true,
                    "octets": 2
                },
                "domain": {
                    "enabled": true,
                    "mode": "subdomain"
                },
                "path": {
                    "enabled": true,
                    "path": "/"
                }
            }
        }
    },
    "mail": {
        "from": "DoozR@localhost.local:DoozR Generic Sender",
        "service": "smtp",
        "server": "127.0.0.1"
    },
    "locale": {
        "charset": "unicode",
        "encoding": "UTF-8",
        "language": "en",
        "locale": "en",
        "mimetype": "text/html",
        "timezone": "UTC"
    },
    "database": {
        "enabled": true,
        "errormessage": "Error while accessing database. Please contact your technical support.",
        "proxy": "Couchdb",
        "oxm": "Couchdb",
        "bootstrap": "Bootstrap.php",
        "route": "Route.php",
        "docroot": "{{DOOZR_DOCUMENT_ROOT}}Model/Lib/Couchdb/lib/",
        "name": "DoozR",
        "description": "",
        "type": "nosql",
        "host": "localhost",
        "port": "5984",
        "database": "DoozR",
        "user": "",
        "password": ""
    },
    "php": {
        "upload_max_filesize": "30M",
        "post_max_size": "2047",
        "max_execution_time": 0,
        "memory_limit": "32M"
    },
    "cache": {
        "enabled": true,
        "container": "filesystem",
        "memcache": {},
        "filesystem": {
            "directory": "{{DOOZR_SYSTEM_TEMP}}"
        },
        "lifetime": 3600
    },
    "garbage": {
        "gc_lifetime": 1800
    },
    "path": {
        "root": "{{DOOZR_DOCUMENT_ROOT}}",
        "app": "{{DOOZR_APP_ROOT}}",
        "upload": "{{DOOZR_APP_ROOT}}Data/Private/Upload/"
    },
    "i18n": {
        "path": "{{DOOZR_APP_ROOT}}Data/Private/I18n/",
        "defaults": {
            "locale": "en-us",
            "language": "en",
            "country": "us",
            "weight": 1,
            "available": [
                "de-de",
                "en-gb",
                "en-us"
            ],
            "namespace": "default"
        },
        "session": true,
        "user": {
            "stores": [
                "session",
                "cookie"
            ],
            "identifier": "DoozR_I18n_Preferences",
            "lifetime": 7776000
        },
        "cache": {
            "enabled": true,
            "directory": "{{DOOZR_SYSTEM_TEMP}}",
            "lifetime": 86400,
            "file": {
                "extension": "txt",
                "prefix": ""
            },
            "directorycheck": true,
            "namespace": "doozr.cache.i18n"
        },
        "translator": {
            "interface": "Gettext"
        },
        "formatting": {
            "highlightspecialwords": true,
            "replacebadwords": true,
            "replacecharacter": "*"
        }
    }
}
