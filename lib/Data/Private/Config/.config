{
    "kernel": {
        "debug": {
            "enabled": true
        },
        "system": {
            "php": {
                "upload_max_filesize": "30M",
                "post_max_size": "2047",
                "max_execution_time": 0,
                "memory_limit": "32M"
            },
            "gc": {
                "lifetime": 1800
            }
        },
        "services": {
            "web": [
                "session"
            ],
            "cli": [
                "crypt",
                "filesystem"
            ],
            "httpd": [
                "filesystem"
            ]
        },
        "transmission": {
            "routing": {
                "routes": "{{include(.routes)}}"
            },
            "ssl": {
                "enabled": false,
                "force": false
            },
            "response": {
                "header": {},
                "gzip": {
                    "enabled": true
                }
            }
        },
        "model": {},
        "view": {
            "template": {
                "path": "{{DOOZR_APP_ROOT}}Data/Private/Template/",
                "engine": {
                    "name": "PHPTAL",
                    "library": "phptal"
                }
            }
        },
        "presenter": {},
        "localization": {
            "charset": "unicode",
            "encoding": "UTF-8",
            "language": "en",
            "country": "us",
            "locale": "en-us",
            "mimetype": "text/html",
            "timezone": "UTC"
        }
    },
    "request": {
        "filter": [{
            "search": "/(\\/$)/u",
            "replace": ""
        },{
            "search": "/(index)/u",
            "replace": "index"
        },{
            "search": "/^$/u",
            "replace": "/"
        }]
    },
    "redirect": {
        "exclude": "Doozr,abc,123",
        "defaults": [
            "Index",
            "Index"
        ],
        "pattern": {
            "pattern": "/[^\\/]{{EXCLUDE}}[a-zA-Z0-9_\\-]+/i",
            "translation": "presenter/action"
        }
    },
    "logging": {
        "enabled": true,
        "level": 0,
        "unclassified": true,
        "logger": {
            "system": {
                "name": "system",
                "level": 0
            },
            "debugbar": {
                "name": "debugbar",
                "level": 0
            }
        }
    },
    "phptal": {
        "settings": {
            "outputmode": 55
        },
        "directories": {
            "templates": "{{DOOZR_APP_ROOT}}Data/Private/Template/",
            "compiled": "{{DOOZR_SYSTEM_TEMP}}",
            "config": "{{DOOZR_APP_ROOT}}Data/Private/Config/Phptal/",
            "cache": "{{DOOZR_SYSTEM_TEMP}}",
            "plugins": "{{DOOZR_APP_ROOT}}Data/Private/Plugin/Phptal/"
        }
    },
    "crypt": {
        "key": "abcdefghijuklmno0123456789012345"
    },
    "session": {
        "autoinit": true,
        "identifier": "Doozr",
        "lifetime": 86400,
        "gcTime": 86400,
        "security": {
            "enabled": true,
            "regenerate": 5,
            "obfuscate": true,
            "httponly": false,
            "ssl": true,
            "encryption": {
                "enabled": false,
                "cipher": "Aes",
                "encoding": "base64"
            },
            "bind": {
                "ip": {
                    "enabled": true,
                    "octets": 2
                },
                "domain": {
                    "enabled": true,
                    "mode": "subdomain"
                },
                "path": {
                    "enabled": true,
                    "path": "/"
                }
            }
        }
    },
    "database": {
        "enabled": true,
        "errormessage": "Error while accessing database. Please contact your technical support.",
        "proxy": "Couchdb",
        "oxm": "Couchdb",
        "bootstrap": "Bootstrap.php",
        "route": "Route.php",
        "docroot": "{{DOOZR_DOCUMENT_ROOT}}Model/Lib/Couchdb/lib/",
        "name": "Doozr",
        "description": "",
        "type": "nosql",
        "host": "localhost",
        "port": "5984",
        "database": "Doozr",
        "user": "",
        "password": ""
    },
    "cache": {
        "enabled": true,
        "container": "filesystem",
        "memcache": {},
        "filesystem": {
            "directory": "{{DOOZR_SYSTEM_TEMP}}"
        },
        "lifetime": 3600
    },
    "path": {
        "root": "{{DOOZR_DOCUMENT_ROOT}}",
        "app": "{{DOOZR_APP_ROOT}}",
        "upload": "{{DOOZR_APP_ROOT}}Data/Private/Upload/"
    },
    "i18n": {
        "path": "{{DOOZR_APP_ROOT}}Data/Private/I18n/",
        "defaults": {
            "locale": "en-us",
            "language": "en",
            "country": "us",
            "weight": 1,
            "available": [
                "de-de",
                "en-gb",
                "en-us"
            ],
            "namespace": "default"
        },
        "session": true,
        "user": {
            "stores": [
                "session",
                "cookie"
            ],
            "identifier": "Doozr_I18n_Preferences",
            "lifetime": 7776000
        },
        "cache": {
            "enabled": true,
            "directory": "{{DOOZR_SYSTEM_TEMP}}",
            "lifetime": 86400,
            "file": {
                "extension": "txt",
                "prefix": ""
            },
            "directorycheck": true,
            "namespace": "doozr.cache.i18n"
        },
        "translator": {
            "interface": "Gettext"
        },
        "formatting": {
            "highlightspecialwords": true,
            "replacebadwords": true,
            "replacecharacter": "*"
        }
    }
}
