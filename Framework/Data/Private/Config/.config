{
    "base": {
        "pattern": {
            "type": "MVP",
            "enabled": true,
            "autorun": true
        },
        "services": {
            "web": [],
            "cli": ["crypt", "filesystem"],
            "httpd": ["filesystem"]
        },
        "template": {
            "enabled": true,
            "path": "{{DOOZR_APP_ROOT}}Data/Private/Tpl/",
            "engine": {
                "name": "template",
                "library": "phptal"
            }
        }
    },
    "route": {
        "exclude": "DoozR,abc,123",
        "defaults": ["Index", "Read"],
        "pattern": {
            "pattern": "/\\/{{EXCLUDE}}([a-zA-Z0-9_\\-]+)/i",
            "translation": "object/action"
        }
    },
    "debug": {
        "enabled": true,
        "template": true,
        "smtp": true
    },
    "logging": {
        "enabled": true,
        "level": 0,
        "unclassified": true,
        "logger": {
            "system": {
                "name": "system",
                "level": 0
            },
            "client": {
                "name": "client",
                "level": 6
            }
        }
    },
    "phptal": {
        "settings" : {
            "outputmode": 55
        },
        "directories": {
            "templates": "{{DOOZR_APP_ROOT}}Data/Private/Tpl/",
            "compiled": "{{DOOZR_APP_ROOT}}Data/Private/Temp/",
            "config": "{{DOOZR_APP_ROOT}}Data/Private/Config/Phptal/",
            "cache": "{{DOOZR_APP_ROOT}}Data/Private/Cache/Phptal/",
            "plugins": "{{DOOZR_APP_ROOT}}Data/Private/Plugin/Phptal/"
        }
    },
    "smarty": {
        "forcecompile": true,
        "compilecheck": true,
        "directories": {
            "templates": "{{DOOZR_APP_ROOT}}Data/Private/Tpl/",
            "compiled": "{{DOOZR_DOCUMENT_ROOT}}Data/Private/Temp/",
            "config": "{{DOOZR_APP_ROOT}}Data/Private/Config/Smarty/",
            "cache": "{{DOOZR_DOCUMENT_ROOT}}Data/Private/Cache/Smarty/",
            "plugins": "{{DOOZR_APP_ROOT}}Data/Private/Plugin/Smarty/"
        }
    },
    "frontcontroller": {
        "globals": {
            "replace": true
        },
        "ids": {
            "enabled": false,
            "max_allowed_impact": 45,
            "max_allowed_single_impact": 15
        },
        "sanitize": {
            "enabled": true,
            "escape_non_ascii": true,
            "allowed_html": {
                "tags": "b,strong,ul,li,EXAMPLE",
                "fields": "news_entry-EXAMPLE"
            },
            "tidylevel": "heavy"
        }
    },
    "transmission": {
        "gzip": {
            "enabled": true
        },
        "ssl": {
            "enabled": true,
            "force": true
        },
        "header": {
            "cache": {}
        }
    },
    "crypt": {
        "keys": {
            "private": "abcdefghijuklmno0123456789012345",
            "public": "abcdefghijuklmno0123456789012345"
        }
    },
    "session": {
        "autoinit": true,
        "identifier": "DoozR",
        "lifetime": 1800,
        "gcTime": 1800,
        "security": {
            "enabled": true,
            "regenerate": 5,
            "obfuscate": true,
            "httponly": false,
            "ssl": true,
            "encryption": {
                "enabled": false,
                "cipher": "Aes",
                "encoding": "base64"
            },
            "bind": {
                "ip": {
                    "enabled": true,
                    "octets": 2
                },
                "domain": {
                    "enabled": true,
                    "mode": "subdomain"
                },
                "path": {
                    "enabled": true,
                    "path": "/"
                }
            }
        }
    },
    "mail": {
        "from": "DoozR@localhost.local:DoozR Generic Emailsender",
        "service": "smtp",
        "server": "127.0.0.1"
    },
    "locale": {
        "charset": "unicode",
        "encoding": "UTF-8",
        "language": "en",
        "locale": "en",
        "mimetype": "text/html",
        "timezone": "UTC"
    },
    "database": {
        "enabled": true,
        "errormessage": "Error while accessing database. Please contact your technical support.",
        "proxy": "Couchdb",
        "oxm": "Couchdb",
        "bootstrap": "Bootstrap.php",
        "route": "Route.php",
        "docroot": "{{DOOZR_DOCUMENT_ROOT}}Model/Lib/Couchdb/lib/",
        "name": "hya",
        "description": "",
        "type": "nosql",
        "host": "localhost",
        "port": "5984",
        "database": "hya",
        "user": "",
        "password": ""
    },
    "php": {
        "upload_max_filesize": "30M",
        "post_max_size": "2047",
        "max_execution_time": 0,
        "memory_limit": "32M"
    },
    "cache": {
        "container": "memcache",
        "lifetime": 3600
    },
    "garbage": {
        "gc_lifetime": 1800
    },
    "admin": {
        "email": "your.email@testdomain.local"
    },
    "path": {
        "root": "{{DOOZR_DOCUMENT_ROOT}}",
        "app":  "{{DOOZR_APP_ROOT}}",
        "upload": "{{DOOZR_APP_ROOT}}Data/Private/Upload/"
    },
    "i18n": {
        "path": "{{DOOZR_APP_ROOT}}Data/Private/I18n/",
        "defaults": {
            "locale": "en",
            "language": "en",
            "country": "us",
            "weight": 1.0,
            "available": ["en-us"],
            "namespace": "default"
        },
        "session": true,
        "user": {
            "stores": ["session", "cookie"],
            "identifier": "DoozR_I18n_Preferences",
            "lifetime": 7776000
        },
        "cache": {
            "enabled": true,
            "directory": "{{DOOZR_APP_ROOT}}Data/Private/Cache/",
            "lifetime": 86400,
            "file": {
                "extension": "txt",
                "prefix": ""
            },
            "directorycheck": true
        },
        "translator": {
            "mode": "Gettext"
        },
        "formatting": {
            "highlightspecialwords": true,
            "replacebadwords": true,
            "replacecharacter": "*"
        }
    }
}
