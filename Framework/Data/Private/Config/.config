{
    "base": {
        "pattern": {
            "type": "MVP",
            "enabled": true
        },
        "modules": {
            "web": ["session"],
            "cli": ["crypt", "filesystem"]
        },
        "template": {
            "enabled": true,
            "path": "{DOOZR_APP_ROOT}Data/Private/Tpl/",
            "engine": {
                "name": "template",
                "lib": "phptal"
            }
        }
    },
    "router": {
        "exclude": "DoozR,abc,123",
        "defaults": ["Default", "Screen"],
        "pattern": {
            "pattern": "/\\/[[EXCLUDE]]([a-zA-Z0-9_\\-]+)/i",
            "translation": "object/action"
        }
    },
    "debug": {
        "enabled": true,
        "template": true,
        "smtp": true
    },
    "logging": {
        "enabled": true,
        "level": 2,
        "unclassified": true,
        "logger": {
            "system": {
                "name": "system",
                "level": 2
            }
        }
    },
    "phptal": {
        "settings" : {
            "outputmode": 55
        },
        "directories": {
            "templates": "{DOOZR_APP_ROOT}Data/Private/Tpl/",
            "compiled": "{DOOZR_APP_ROOT}Data/Private/Temp/",
            "config": "{DOOZR_APP_ROOT}Data/Private/Config/Phptal/",
            "cache": "{DOOZR_APP_ROOT}Data/Private/Cache/Phptal/",
            "plugins": "{DOOZR_APP_ROOT}Data/Private/Plugin/Phptal/"
        }
    },
    "smarty": {
        "forcecompile": true,
        "compilecheck": true,
        "directories": {
            "templates": "{DOOZR_APP_ROOT}Data/Private/Tpl/",
            "compiled": "{DOOZR_DOCUMENT_ROOT}Data/Private/Temp/",
            "config": "{DOOZR_APP_ROOT}Data/Private/Config/Smarty/",
            "cache": "{DOOZR_DOCUMENT_ROOT}Data/Private/Cache/Smarty/",
            "plugins": "{DOOZR_APP_ROOT}Data/Private/Plugin/Smarty/"
        }
    },
    "frontcontroller": {
        "globals": {
            "replace": true
        },
        "ids": {
            "enabled": false,
            "max_allowed_impact": 45,
            "max_allowed_single_impact": 15
        },
        "sanitize": {
            "enabled": true,
            "escape_non_ascii": true,
            "allowed_html": {
                "tags": "b,strong,ul,li,EXAMPLE",
                "fields": "news_entry-EXAMPLE"
            },
            "tidylevel": "heavy"
        }
    },
    "transmission": {
        "gzip": {
            "enabled": true
        },
        "ssl": {
            "enabled": true,
            "force": true
        },
        "header": {
            "cache": [
                "mopel", "popel", "glopel"
            ]
        }
    },
    "crypt": {
        "keys": {
            "private": "abcdefghijuklmno0123456789012345",
            "public": "abcdefghijuklmno0123456789012345"
        }
    },
    "session": {
        "autoinit": true,
        "identifier": "DoozR",
        "lifetime": 1800,
        "gcTime": 1800,
        "security": {
            "enabled": true,
            "regenerate": 5,
            "obfuscate": true,
            "httponly": false,
            "ssl": true,
            "encryption": {
                "enabled": false,
                "cipher": "Aes",
                "encoding": "base64"
            },
            "bind": {
                "ip": {
                    "enabled": true,
                    "octets": 2
                },
                "domain": {
                    "enabled": true,
                    "mode": "subdomain"
                },
                "path": {
                    "enabled": true,
                    "path": "/"
                }
            }
        }
    },
    "mail": {
        "from": "DoozR@localhost.local:DoozR Generic Emailsender",
        "service": "smtp",
        "server": "127.0.0.1"
    },
    "locale": {
        "charset": "unicode",
        "encoding": "UTF-8",
        "language": "EN",
        "locale": "EN",
        "mimetype": "text/html",
        "timezone": "Europe/Berlin"
    },
    "database": {
        "enabled": true,
        "errormessage": "Error while accessing database. Please contact your technical support.",
        "lib": "Couchdb",
        "oxm": "phpillow",
        "bootstrap": "bootstrap.php",
        "route": "Route.php",
        "docroot": "{DOOZR_DOCUMENT_ROOT}Model/Doodi/Couchdb/",
        "host": "localhost",
        "port": "5984",
        "database": "candymountain",
        "user": "",
        "password": ""
    },
    "php": {
        "upload_max_filesize": "30M",
        "post_max_size": "2047",
        "max_execution_time": 0,
        "memory_limit": "32M"
    },
    "cache": {
        "container": "memcache",
        "lifetime": 3600
    },
    "garbage": {
        "gc_lifetime": 1800
    },
    "admin": {
        "email": "opensource@clickalicious.de"
    },
    "path": {
        "root": "{DOOZR_DOCUMENT_ROOT}",
        "app":  "{DOOZR_APP_ROOT}",
        "upload": "{DOOZR_APP_ROOT}Data/Private/Upload/"
    },
    "i18n": {
        "path": "{DOOZR_APP_ROOT}Data/Private/I18n/",
        "translator": {
            "mode": "Text",
            "default_namespace": "lang_main"
        }
    }
}